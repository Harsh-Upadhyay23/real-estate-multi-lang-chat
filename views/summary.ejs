<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Messages Summary</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 0;
            background-color: #f8f8f8;
        }

        .container {
            max-width: 800px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border: 2px solid #333;
        }

        h1 {
            text-align: center;
            text-transform: uppercase;
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
            border-bottom: 2px solid #333;
            padding-bottom: 10px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            border: 1px solid #ddd;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #333;
            color: white;
            text-transform: uppercase;
        }

        .signature-section {
            margin-top: 40px;
            display: flex;
            justify-content: space-between;
        }

        .signature-box {
            width: 300px;
            height: 60px;
            border: 2px solid #333;
            margin-top: 10px;
            text-align: center;
            line-height: 60px;
            font-style: italic;
            color: gray;
            background-color: #fafafa;
        }

        .footer {
            margin-top: 30px;
            text-align: center;
            font-size: 14px;
            color: #555;
        }

        /* Hide elements when printing */
        @media print {
            .no-print {
                display: none;
            }

            .container {
                border: none;
                box-shadow: none;
            }
        }
    </style>

    <script>
        function printSummary() {
            window.print();
        }
    </script>
</head>
<body>
    <div class="container">
        <h1>Messages Summary</h1>

        <% if (messages && messages.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Sender</th>
                        <th>Receiver</th>
                        <th>Message</th>
                        <th>Timestamp</th>
                    </tr>
                </thead>
                <tbody>
                    <% messages.forEach(message => { %>
                        <tr>
                            <td><%= message.sender %></td>
                            <td><%= message.receiver %></td>
                            <td><%= message.message %></td>
                            <td><%= message.timestamp %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No messages found.</p>
        <% } %>

        <!-- Signature Fields -->
        <div class="signature-section">
            <div>
                <h3>Client Signature:</h3>
                <div class="signature-box">____________</div>
            </div>
            <div>
                <h3>Real Estate Agent Signature:</h3>
                <div class="signature-box">____________</div>
            </div>
        </div>

        <!-- Footer Section -->
        <div class="footer">
            <p>Thank you for your business.</p>
        </div>

        <!-- Buttons and Links that should not appear in print -->
        <div class="no-print">
            <button onclick="printSummary()">Print Summary</button>
            <br><br>
            <a href="/login">Go to Login</a>
        </div>
    </div>
</body>
</html>
